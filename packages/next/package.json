{
  "name": "@pdfn/next",
  "version": "0.4.0",
  "description": "Next.js plugin for pdfn - Pre-compiles Tailwind CSS for optimized PDF generation",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "keywords": [
    "next",
    "nextjs",
    "plugin",
    "pdf",
    "tailwind",
    "pdfn",
    "vercel",
    "serverless",
    "edge"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfnjs/pdfn.git",
    "directory": "packages/next"
  },
  "homepage": "https://pdfn.dev",
  "author": "gokulsiva (https://github.com/gokulsiva)",
  "bugs": {
    "url": "https://github.com/pdfnjs/pdfn/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "peerDependencies": {
    "@pdfn/client": "workspace:*",
    "@pdfn/tailwind": "workspace:*",
    "next": ">=14.0.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@pdfn/client": {
      "optional": true
    }
  },
  "dependencies": {
    "@pdfn/core": "workspace:*",
    "esbuild": "^0.27.2",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@pdfn/eslint-config": "workspace:*",
    "@pdfn/typescript-config": "workspace:*",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "tailwindcss": "^4"
  }
}
