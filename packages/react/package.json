{
  "name": "@pdfn/react",
  "version": "0.5.2",
  "description": "React framework for print-ready PDFs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "peerDependencies": {
    "@pdfn/tailwind": "workspace:*",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@pdfn/tailwind": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "keywords": [
    "pdf",
    "react",
    "print",
    "document",
    "invoice",
    "report",
    "generation",
    "server-side",
    "ssr"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfnjs/pdfn.git",
    "directory": "packages/react"
  },
  "homepage": "https://pdfn.dev",
  "author": "gokulsiva (https://github.com/gokulsiva)",
  "bugs": {
    "url": "https://github.com/pdfnjs/pdfn/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@pdfn/eslint-config": "workspace:*",
    "@pdfn/tailwind": "workspace:*",
    "@pdfn/typescript-config": "workspace:*",
    "@types/node": "^25.0.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.3.0",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.35.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@pdfn/client": "workspace:*",
    "@pdfn/core": "workspace:*"
  }
}
