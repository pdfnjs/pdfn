{
  "name": "@pdfx-dev/react",
  "version": "0.0.1-alpha.1",
  "description": "The React framework for PDFs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "peerDependencies": {
    "@pdfx-dev/tailwind": "workspace:*",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@pdfx-dev/tailwind": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "keywords": [
    "pdf",
    "react",
    "print",
    "document",
    "invoice",
    "report"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfx-dev/pdfx.git",
    "directory": "packages/react"
  },
  "devDependencies": {
    "@pdfx-dev/eslint-config": "workspace:*",
    "@pdfx-dev/tailwind": "workspace:*",
    "@pdfx-dev/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.3.0",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.33.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "pagedjs": "^0.4.3",
    "server-only": "^0.0.1"
  }
}
