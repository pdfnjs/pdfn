{
  "name": "@pdfn/tailwind",
  "version": "0.0.1",
  "description": "Tailwind CSS support for PDFN",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@pdfn/eslint-config": "workspace:*",
    "@pdfn/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "keywords": [
    "pdfn",
    "tailwind",
    "pdf",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfnjs/pdfn.git",
    "directory": "packages/tailwind"
  },
  "homepage": "https://pdfn.dev"
}
